<Window
    x:Class="DependencyPropertiesLab.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DependencyPropertiesLab"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MyWindow"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>


        <TextBlock
            Margin="243,168,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding ElementName=MyWindow, Path=MyClrProp}"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="297,291,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding ElementName=MyWindow, Path=NormalClr}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
